class CallExpr : Expr
{
    var funref;
    var args;

    function parse(tk, owner, start, subexp)
    {
        self.initexpr(owner, start);
        self.funref = subexp;
        self.args = [];
        var t = tk.get();
        if (! t.isop(')')) {
            tk.unget(t);
            do {
                var modifier = new ModifierList();
                var expr = parseExpr(tk, owner);
                t = tk.get();
                if (t.isop(':')) {
                    t = tk.get();
                    if (t.isop('[')) {
                        modifier = modifier.parse(tk, owner);
                        t = tk.get();
                    }
                    else {
                        InternalError('Checking implementation');
                    }
                }
                self.args.push(new Argument().set(expr, modifier));
            } while (t.isop(','));
            if (! t.isop(')'))
                SyntaxError("Expected ')' or ','", t);
        }
        return self;
    }
    function checkResult() { return REGvar; }
    function optimize()
    {
        self.funref = self.funref.optimize();
        var args = self.args;
        //var modifiers = self.modifiers;
        int n = args;
        for (int i= 0; i < n; ++i) {
            args[i] = args[i].optimize();
            //if (modifiers[i] != null)
            //    modifiers[i].optimize();
        }

        // Check for predefined functions
        var funref = self.funref;
        if (funref.isidentifier()) {
            string call = funref.getName();
            var predef = findpredef(call, n);
            if (predef != null)
                return new CallPredefExpr().init(self.owner, self.start, predef, self.args);
        }

        return self;
    }
    function emit(e, result)
    {
        var funref = self.funref;
        string call;
        if (funref.isidentifier()) {
            call = funref.checkIdentifier();
            if (call == '') {
                string aux = funref.getName();
                call = "'" + aux + "'";
            }
        }
        else {
            if (funref instanceof MemberExpr) {
                call = funref.emit_left_get(e);
            }
            else
                call = funref.emit_get(e);
        }
        string argreg[];
        var args = self.args;
        for (var argument in args) {
            var arg = argument.arg;
            string reg;
            if (arg.isnull()) {
                reg = self.tempreg(REGvar);
                e.emitnull(reg);
            }
            else
                reg = arg.emit_get(e);
            argreg.push(reg);
        }
        self.annotate(e);
        if (result != null)
            e.print(result, ' = ');

        if (funref instanceof MemberExpr)
            e.print(call, ".'", funref.get_member(), "'");
        else
            e.print(call);
        e.print('(');

        string sep = '';
        int n = argreg;
        for (int i = 0; i < n; ++i) {
            string a = argreg[i];
            e.print(sep, a);
            int isflat = 0;
            int isnamed = 0;
            string setname = '';
            for (var modif in args[i].modifiers.getlist()) {
                string name = modif.getname();
                if (name == 'flat')
                    isflat = 1;
                if (name == 'named') {
                    isnamed = 1;
                    switch (modif.numargs()) {
                    case 0: 
                        break;
                    case 1:
                        var argmod = modif.getarg(0);
                        if (! argmod.isstringliteral())
                            SyntaxError('Invalid modifier', self.start);
                        setname = argmod.getPirString();
                        break;
                    default:
                        SyntaxError('Invalid modifier', self.start);
                    }
                }
            }
            if (isflat && isnamed)
                e.print(' :flat :named');
            else if (isflat)
                e.print(' :flat');
            else if (isnamed) {
                e.print(' :named');
                if (setname != '')
                    e.print("(", setname, ")");
            }
            sep = ', ';
        }
        e.say(')');
    }
}

