class FixedVarStatement : VarBaseStatement
{
    var exprsize;

    function parse(start, tk, owner, name)
    {
        self.initvarbase(start, owner, name);
        self.exprsize = parseExpr(tk, self);
        var t = tk.get();
        if (!t.isop(']'))
            SyntaxError("Expected ']'", t);
        t = tk.get();
        if (!t.isop(';'))
            SyntaxError("Expected ';'", t);
        return self;
    }
    function optimize()
    {
        self.exprsize = self.exprsize.optimize();
        return self.optimize_init();
    }
    function emit(var e)
    {
        string regsize = self.exprsize.emit_get(e);
        self.annotate(e);
        string name=  self.name;
        string reg = self.reg;
        e.comment('var ' + name + '[] : ' + reg);
        e.say('new ', reg, ", 'FixedPMCArray', ", regsize);
    }
}

function parseVar(start, tk, owner)
{
    var name = tk.get();
    if (!name.isidentifier())
        SyntaxError('Identifier expected', name);
    var t = tk.get();
    if (t.isop('[')) {
        t = tk.get();
        if (t.isop(']'))
            return new ResizableVarStatement().parse(start, tk, owner, name); 
        else {
            tk.unget(t);
            return new FixedVarStatement().parse(start, tk, owner, name); 
        }
    }
    else {
        tk.unget(t);
        return new VarStatement().parse(start, tk, owner, name);
    }
}

