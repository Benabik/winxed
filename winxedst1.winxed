class OpMulExpr : OpBinaryExpr
{
    function checkResult()
    {
        var lexpr = self.lexpr;
        var ltype = lexpr.checkResult();
        if (ltype == REGstring)
            return REGstring;
        if (ltype == REGint && self.rexpr.checkResult() == REGint)
            return REGint;
        else
            return REGfloat;
    }
    function optimize()
    {
        self.optimizearg();
        var lexpr = self.lexpr;
        var rexpr = self.rexpr;
        if (lexpr.isliteral() && rexpr.isliteral()) {
            string ltype = lexpr.checkResult();
            string rtype = rexpr.checkResult();
            if (ltype == REGint && rtype == REGint) {
                var lval = lexpr.numval;
                int ln = lval;
                var rval = rexpr.numval;
                int rn = rval;
                return new IntegerLiteral().set(self.owner, self.start, ln * rn);
            }
        }
        return self;
    }
    function emit(e, result)
    {
        var lexpr = self.lexpr;
        var rexpr = self.rexpr;
        var ltype = lexpr.checkResult();
        if (ltype == REGstring) {
            string lreg = lexpr.emit_get(e);
            string rreg = rexpr.emit_get(e);
            string rval;
            switch (rexpr.checkResult()) {
            case REGint:
                rval = rreg;
                break;
            default:
                rval = self.tempreg(REGint);
                e.emitset(rval, rreg);
            }
            self.annotate(e);
            e.say('repeat ', result, ', ', lreg, ', ', rval);
            return;
        }

        // Quick fix for some float mul
        // TODO: rewrite this mess
        if (ltype == REGfloat) {
            string lreg = lexpr.emit_get(e);
            string rreg = rexpr.emit_get(e);
            string rval;
            switch (rexpr.checkResult()) {
            case REGint:
                rval = self.tempreg(REGfloat);
                e.emitset(rval, rreg);
                rval = rreg;
                break;
            case REGfloat:
                rval = rreg;
                break;
            default:
                rval = self.tempreg(REGfloat);
                e.emitset(rval, rreg);
            }
            self.annotate(e);
            e.say('mul ', result, ', ', lreg, ', ', rval);
            return;
        }

        string rleft;
        string rright;
        int nleft;
        int nright;
        if ((!lexpr.issimple()) || lexpr.isidentifier()) {
            rleft= self.tempreg(self.checkResult());
            lexpr.emit(e, rleft);
        }
        else {
            nleft= lexpr.getIntegerValue();
            rleft= nleft;
        }
        if ((!rexpr.issimple()) || rexpr.isidentifier()) {
            rright= self.tempreg(self.checkResult());
            rexpr.emit(e, rright);
        }
        else {
            string type = rexpr.checkResult();
            switch(type) {
            case REGstring:
                rright= self.tempreg(self.checkResult());
                rexpr.emit(e, rright);
                break;
            case REGint:
            default:
                nright= rexpr.getIntegerValue();
                rright= nright;
                break;
            }
        }
        self.annotate(e);
        e.say('mul ', result, ', ', rleft, ', ', rright);
    }
}

