class CallPredefExpr : Expr
{
    var predef;
    var args;

    function init(owner, start, predef, args)
    {
        self.initexpr(owner, start);
        self.predef = predef;
        self.args = args;
        return self;
    }
    function checkResult()
    {
        return self.predef.result();
    }
    function emit(e, result)
    {
        var predef = self.predef;
        var args = self.args;
        string argreg[];
        var arg;
        int np = predef.params();
        if (np == -1) {
            for (arg in args) {
                string reg = arg.arg.emit_get(e);
                argreg.push(reg);
            }
        }
        else {
            int n = self.args;
            for (int i = 0; i < n; ++i) {
                arg = args[i].arg;
                string argtype = arg.checkResult();
                string paramtype = predef.paramtype(i);
                string argr;
                if (argtype == paramtype || paramtype == REGany)
                    argr = arg.emit_get(e);
                else {
                    argr = self.tempreg(paramtype);
                    if (paramtype == REGvar) {
                        string nreg = '';
                        switch (argtype) {
                        case REGint: nreg = 'Integer'; break;
                        case REGfloat: nreg = 'Float'; break;
                        case REGstring: nreg = 'String'; break;
                        }
                        if (nreg != '')
                            e.say('new ', argr, ", '", nreg , "'");
                    }
                    arg.emit(e, argr);
                }
                argreg.push(argr);
            }
        }
        self.predef.expand(e, self.start, result, argreg);
    }
}

