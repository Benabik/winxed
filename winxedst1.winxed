//*********************************************

class PiropStatement : Statement, SimpleArgList
{
    var opname;

    function parse(start, tk, owner)
    {
        self.initstatement(start, owner);
        var t = tk.get();
        if (! t.isop('{'))
            SyntaxError("Invalid '$' statement", start);
        t = tk.get();
        string opname = t.getidentifier();
        self.opname = opname;
        t = tk.get();
        if (! t.isop('}')) {
            tk.unget(t);
            self.parseargs(tk, self, '}');
        }
        ExpectOp(';', tk);
        return self;
    }
    function optimize()
    {
        self.optimizeargs();
        return self;
    }
    function emit(e)
    {
        string opname = self.opname;
        self.annotate(e);
        e.comment('pirop ' + opname);
        if (self.numargs() == 0)
            e.say(opname);
        else {
            e.print(opname, ' ');
            self.emitargs(e);
            e.say();
        }
    }
}

