    {
        var regleft;
        if (self.left.isidentifier())
            regleft = self.left.getIdentifier();
        else
            regleft = self.left.emit_get(e);
        int nargs = self.numargs();
        var argregs = self.getargvalues(e);
        string type = self.checkResult();
        if (type == REGstring) {
            if (nargs != 1)
               SyntaxError('Bad string index', self.start);
            e.say('substr ', result, ', ', regleft, ', ', self.getarg(0), ', ', 1);
        }
        else {
            e.print(result, ' = ', regleft, '[');
            e.print(join('; ', argregs));
            e.say(']');
        }
    }
    function emit_assign(e, string typeright, string rreg)
    {
        var regleft = self.left.emit_get(e);
        var argregs = self.getargvalues(e);
        self.annotate(e);
        e.print(regleft, '[');
        e.print(join('; ', argregs));
        e.say('] = ', rreg);
    }
    function emit_assign_get(e, expr)
    {
        var regleft = self.left.emit_get(e);
        var argregs = self.getargvalues(e);
        string rreg;
        if (expr.isnull()) {
            rreg = self.tempreg(REGvar);
            e.emitnull(rreg);
        }
        else
            rreg = expr.emit_get(e);
        self.annotate(e);
        e.print(regleft, '[');
        e.print(join('; ', argregs));
        e.say('] = ', rreg);
        return rreg;
    }
}

