class OpBoolAndExpr : OpBinaryExpr
{
    function checkResult()
    {
        return REGint;
    }
    function set(owner, t, eleft, eright)
    {
        self.owner = owner;
        self.start = t;
        self.lexpr = eleft;
        self.rexpr = eright;
        return self;
    }
    function optimize()
    {
        self.optimizearg();
        if (self.lexpr.isintegerliteral() ) {
            var lval = self.lexpr.numval;
            int ln = lval;
            if (ln != 0)
               return self.rexpr;
            else
                return new IntegerLiteral().set(self.owner, self.start, ln);
        }
        return self;
    }
    function emit(e, result)
    {
        string res = result != null ? result : self.tempreg(REGint);
        if (self.lexpr.issimple() && self.rexpr.issimple()) {
            string op1 = self.tempreg(REGint);
            string op2 = self.tempreg(REGint);
            self.lexpr.emit(e, op1);
            self.rexpr.emit(e, op2);
            e.say('and ', res, ', ', op1, ', ', op2);
        }
        else {
            string l = self.owner.genlabel();
            self.lexpr.emit(e, res);
            e.say('unless ', res, ' goto ', l);
            self.rexpr.emit(e, res);
            e.emitlabel(l);
        }
    }
}

