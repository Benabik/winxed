    {
        var args = self.args;
        if (argnum < args.numargs())
            return args.getarg(argnum);
        else
            InternalError('Wrong modifier arg number');
    }
    function set(string name, var args)
    {
        self.name = name;
        if (args != null)
            self.args = args;
        return self;
    }
    function optimize()
    {
        self.args.optimizeargs();
    }
}

class ModifierList
{
    var list;

    function init [vtable] ()
    {
        self.list = [];
    }
    function parse(tk, owner)
    {
        var t;
        do {
            t = tk.get();
            string name = t.getidentifier();
            t = tk.get();
            var args = new SimpleArgList();
            if (t.isop('(')) {
                args.parseargs(tk, owner, ')');
                t= tk.get();
            }
            self.list.push(new Modifier().set(name, args));
        } while (t.isop(','));
        RequireOp(']', t);

        return self;
    }
    function optimize()
    {
        for (var arg in self.list)
            arg.optimize();
    }
    function getlist() { return self.list; }
}

